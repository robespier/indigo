/**
 * Setup
 */
Indigo.Tests.testOpenTemplate = function() {};
Indigo.Tests.testOpenTemplate.prototype = new Indigo.Tests.testSuite(app);
Indigo.Tests.testOpenTemplate.prototype.constructor = Indigo.Tests.testOpenTemplate;
Indigo.Tests.testOpenTemplate.prototype.name = "testOpenTemplate";

Indigo.Tests.testOpenTemplate.prototype.setUp = function () {
	this.pocient = new Indigo.AssemblyImposer(this.app);
	this.pocient.setup(this.getMockJob());
	this.pocient.templateFolder = this.testsFilesFolder + this.name;
};

/**
 * Test
 */
Indigo.Tests.testOpenTemplate.prototype.run = function() {
	var template = this.pocient.openTemplate();
	var result = this.assertInstanceOf(template, Document);
	this.log(result, 'Expected file opened');

	this.pocient.templateFolder = new Folder('/dev/random');
	var exc = this.assertThrows(this.pocient.openTemplate, 'The specified file could not be opened because it could not be found');
	this.log(exc, 'Throws expected exception on missing template file');
};
